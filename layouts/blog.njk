<!DOCTYPE html>
<html lang="{{ meta.lang or site.lang }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ title }}" />
    <meta name="twitter:description" content="{{ description }}" />
    <meta name="twitter:image" content="{{ image_url }}" />

    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ description }}" />
    <meta property="og:image" content="{{ image_url }}" />
    <meta property="og:url" content="{{ url }}" />
    <meta property="og:type" content="article" />
    <title>{{ site.title }} - {{ title or meta.title }}</title>

    <link rel="stylesheet" href="/dist/app.css" />
    <link href="https://unpkg.com/prismjs@1.20.0/themes/prism.css" rel="stylesheet" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-68399978-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "UA-68399978-1");
    </script>
    {% include "meta.njk" %}
  </head>

  <body class="d-flex flex-column min-vh-100 homepage">
    <!-- skiplinks -->
    <a href="#main" class="visually-hidden-focusable">Skip to main content</a>

    {% include "header.njk" %}
    <div class="background-image"></div>
    <div class="flex-grow-1">
      <main id="main">
        <div class="container my-2 py-4 bg-white" id="content">
          <div class="row">
            <div class="col-md-10 mx-auto">
              <h1>{{ title }}</h1>
              <p class="border-top border-dark" id="byline">
                <em>By {{ author }} | {{ date | readableDate }}</em>
              </p>
              {% if image %}
              <img src="{{ image }}" class="featured-image-post" />
              {% else %}
              <img src="/assets/images/background.jpg" class="featured-image-post" />
              {% endif %}
              {{ content | safe }}
            </div>
          </div>
        </div>
      </main>
    </div>
    {% include "footer.njk" %}
    <script type="text/javascript" src="/dist/app.js"></script>
  </body>
</html>
